<% content_for :title, "Login" %>

<style>
  body {
    background: linear-gradient(to right, #f3fdf5, #ffffff);
    font-family: 'Segoe UI', sans-serif;
    color: #333;
  }

  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login-card {
    max-width: 420px;
    width: 100%;
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
    padding: 40px;
  }

  .login-card h2 {
    font-weight: bold;
    margin-bottom: 30px;
    text-align: center;
    color: #333;
  }

  .form-control {
    border-radius: 10px;
    padding: 10px 15px;
  }

  .btn-main {
    background-color: #ff7b29;
    color: white;
    font-weight: 600;
    padding: 12px;
    border-radius: 10px;
    border: none;
    width: 100%;
  }

  .btn-main:hover {
    background-color: #ff6710;
  }

  .form-check-label {
    color: #555;
  }

  .devise-links a {
    color: #30c97c;
    text-decoration: none;
    font-weight: 500;
  }

  .devise-links a:hover {
    text-decoration: underline;
  }
</style>

<div class="login-container">
  <div class="login-card">
    <h2>Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-main" %>
      </div>
    <% end %>

    <div class="mt-4 text-center devise-links">
     <small> Don't have an account ? <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
