<% content_for :title, "TaskMaster" %>

<!-- Bootstrap Icons & Google Fonts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: #f8fbfd;
    color: #333;
    scroll-behavior: smooth;
  }

  .navbar {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease-in-out;
  }

  .hero {
    padding: 120px 20px;
    background: linear-gradient(120deg, #d4fc79, #96e6a1);
    text-align: center;
    color: #0d1b2a;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    animation: fadeInDown 1s ease;
  }

  .hero p {
    font-size: 1.2rem;
    margin-top: 1rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 1.2s ease;
  }

  .btn-main {
    padding: 12px 28px;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease-in-out;
  }

  .btn-orange {
    background-color: #ff7b29;
    color: white;
  }

  .btn-orange:hover {
    background-color: #e5671c;
  }

  .features {
    padding: 100px 0;
  }

  .section-heading {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 60px;
  }

  .feature-box {
    padding: 30px;
    border-radius: 16px;
    background: #fff;
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease;
  }

  .feature-box:hover {
    transform: translateY(-8px);
  }

  .feature-icon {
    font-size: 2.4rem;
    color: #0d6efd;
    margin-bottom: 1rem;
  }

  .screenshot-section {
    background: #effcf6;
    padding: 100px 0;
    text-align: center;
  }

  .cta-section {
    background: linear-gradient(135deg, #d0f2ff, #ffffff);
    padding: 100px 20px;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2.4rem;
    font-weight: 700;
    color: #023e8a;
  }

  .cta-section p {
    font-size: 1.2rem;
    max-width: 740px;
    margin: 20px auto;
    color: #555;
  }

  @keyframes fadeInDown {
    0% { opacity: 0; transform: translateY(-20px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .hero h1 { font-size: 2rem; }
    .section-heading { font-size: 2rem; }
    .cta-section h2 { font-size: 1.8rem; }
  }
</style>

<nav class="navbar navbar-expand-lg py-3 px-4">
 
    <div style="flex: 1 1 200px;">
      <%= link_to root_path, class: "text-decoration-none fw-bold h4 d-block mb-3", style: "color: #006064;" do %>
        ðŸŒ€ TaskMaster
      <% end %>
    </div>
      <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</nav>

<section class="hero">
  <div class="container">
    <h1>Smarter Task Management</h1>
    <p>Organize, collaborate, and get more done â€” TaskMaster helps your team work better together.</p>
    <div class="mt-4">
      <% if user_signed_in? %>
        <%= link_to "Go to Dashboard", dashboard_index_path, class: "btn btn-main btn-orange me-2" %>
      <% else %>
        <%= link_to "Get Started Free", new_user_registration_path, class: "btn btn-main btn-orange" %>
      <% end %>
    </div>
  </div>
</section>

<section class="features">
  <div class="container">
    <h2 class="section-heading">Built for Modern Teams</h2>
    <div class="row g-4">

      <%# Feature list %>
      <% features = [
        ["bi-pencil-square", "Task Creation", "Add detailed tasks, due dates, and organize them in projects."],
        ["bi-sliders", "Filters & Priorities", "Sort and focus using advanced filters and priority labels."],
        ["bi-paperclip", "Attachments", "Upload docs, images, and assets directly into tasks."],
        ["bi-chat-dots", "Real-time Chat", "Collaborate instantly with team discussions and updates."],
        ["bi-stopwatch", "Time Tracking", "Track how long tasks take to boost productivity."],
        ["bi-calendar-event", "Calendar Sync", "Visualize your deadlines with Google Calendar integration."],
        ["bi-graph-up", "Kanban Boards", "Drag-and-drop status with clear progress bars."],
        ["bi-bar-chart-line", "Analytics", "Track task trends, velocity, and individual performance."]
      ] %>

      <% features.each do |icon, title, desc| %>
        <div class="col-sm-6 col-lg-3" data-aos="fade-up">
          <div class="feature-box text-center h-100">
            <div class="feature-icon"><i class="bi <%= icon %>"></i></div>
            <h5 class="fw-semibold"><%= title %></h5>
            <p><%= desc %></p>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</section>

<section class="screenshot-section">
  <div class="container">
    <h2 class="section-heading">Your Dashboard at a Glance</h2>
    <%= image_tag "dashboard.jpg", class: "img-fluid rounded shadow-lg", alt: "Dashboard UI" %>
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <h2>Start Managing Smarter Today</h2>
    <p>Sign up for free and unlock your teamâ€™s productivity potential. With TaskMaster, organizing your work becomes effortless.</p>
    <%= link_to "Create Free Account", new_user_registration_path, class: "btn btn-main btn-orange mt-3" %>
  </div>
</section>

<!-- AOS for animations -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init({ duration: 1000 });
</script>
