<% content_for :title, "TaskMaster" %>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
  body {
    background: linear-gradient(to right, #f3fdf5, #ffffff);
    font-family: 'Segoe UI', sans-serif;
    color: #333;
  }

  .hero {
    padding: 100px 0;
    text-align: center;
    background: linear-gradient(135deg, #e8f8f5, #ffffff);
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: bold;
  }

  .hero p {
    font-size: 1.25rem;
    margin-top: 1rem;
  }

  .btn-main {
    padding: 14px 30px;
    font-weight: 500;
    border-radius: 8px;
    margin: 10px;
    border: none;
  }

  .btn-orange {
    background-color: #ff7b29;
    color: white;
  }

  .btn-outline-green {
    background-color: #e8fbf3;
    color: #30c97c;
  }

  .features {
    padding: 80px 0;
    background-color: #ffffff;
  }

  .feature-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #0d6efd;
  }

  .section-heading {
    font-size: 2.25rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 40px;
  }

  .feature-box {
    padding: 30px;
    border-radius: 12px;
    background: #f9f9f9;
    box-shadow: 1 4px 20px rgba(0, 0, 0, 0.03);
    height: 100%;
  }

  .screenshot-section {
    padding: 60px 0;
    background-color: #f3fdf5;
  }

  .cta-section {
  background: linear-gradient(135deg, #f0f8ff, #ffffff);
  padding: 60px 20px;
  text-align: center;
  font-family: 'Segoe UI', sans-serif;
}
 
.cta-section h2 {
  color: #023e8a;
  font-size: 2.2rem;
  font-weight: 700;
  margin-bottom: 20px;
}
 
.cta-section p {
  color: #6c757d;
  max-width: 700px;
  margin: 0 auto;
  font-size: 1.1rem;
  line-height: 1.7;
}
 

@media (max-width: 768px) {
  .cta-section h2 {
    font-size: 1.75rem;
  }
 
  .cta-section p {
    font-size: 1rem;
  }
}
.navbar {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: background 0.3s ease;
  }
</style>

 
<nav class="navbar navbar-expand-lg px-4 py-3">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold text-warning" href="#">ðŸŒ€ TaskMaster</a>
    <div>
      <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger me-2" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-secondary me-2" %>
      <% end %>
    </div>
  </div>
</nav>

<section class="hero">
  <div class="container">
    <h1>Smarter Task Management</h1>
    <p>Organize, collaborate, and stay on top of your projects with TaskMaster â€“ the ultimate productivity tool.</p>
    <div class="mt-4">
      <% if user_signed_in? %>
        <%= link_to "Go to Dashboard", dashboard_index_path, class: "btn btn-main btn-orange" %>
      <% else %>
        <%= link_to "Get Started", new_user_registration_path, class: "btn btn-main btn-orange" %>
      <% end %>
    </div>
  </div>
</section>

<section class="features">
  <div class="container">
    <h2 class="section-heading">Powerful Features Built for Teams</h2>
    <div class="row g-4">

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-pencil-square"></i></div>
          <h5>Task Creation & Projects</h5>
          <p>Create tasks with descriptions, due dates, assignees, and organize them into projects and sub-tasks.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-sliders"></i></div>
          <h5>Priorities & Filters</h5>
          <p>Set priorities (high, medium, low), filter tasks, and stay focused on what matters most.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-paperclip"></i></div>
          <h5>Notes & Attachments</h5>
          <p>Attach documents and jot down notes right inside your tasks to keep everything in context.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-chat-dots"></i></div>
          <h5>Collaboration</h5>
          <p>Comment, chat, and share files with teammates in real-time. Stay in sync effortlessly.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-stopwatch"></i></div>
          <h5>Time Tracking</h5>
          <p>Track time spent on tasks, set reminders, and get notified before deadlines hit.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-calendar-event"></i></div>
          <h5>Calendar & Scheduling</h5>
          <p>Integrate your calendar, visualize commitments, and never miss a deadline again.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-graph-up"></i></div>
          <h5>Progress Visualization</h5>
          <p>Track task status with Kanban boards and  progress bars.</p>
        </div>
      </div>

  
      <div class="col-md-4">
        <div class="feature-box text-center">
          <div class="feature-icon"><i class="bi bi-bar-chart-line"></i></div>
          <h5>Reports & Analytics</h5>
          <p>Generate detailed reports on task progress, time usage, and team productivity.</p>
        </div>
      </div>

    </div>
  </div>
</section>

<section class="screenshot-section text-center">
  <div class="container">
    <h2 class="mb-5">See It In Action</h2>
    <%= image_tag "dashboard.jpg", class: "img-fluid rounded shadow-sm", alt: "Dashboard Screenshot" %>
  </div>
</section>

<section class="cta-section text-center py-5" style="background: linear-gradient(135deg, #f0f8ff, #ffffff);">
  <div class="container">
    <h2 class="fw-bold mb-3" style="color: #023e8a;">Start Managing Your Tasks Today</h2>
    <p class="mb-4 text-muted" style="max-width: 700px; margin: 0 auto; font-size: 1.1rem;">
      TaskMaster is your all-in-one productivity hub â€” create tasks, set priorities, track deadlines, and collaborate with your team effortlessly. Whether you're managing a project, a daily routine, or a remote team, TaskMaster helps you stay organized and get things done faster.
    </p>
 
  </div>
</section>

