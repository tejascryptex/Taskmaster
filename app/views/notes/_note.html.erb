<div id="<%= dom_id(note) %>" class="card shadow-sm border-0 mb-3">
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">
      <i class="bi bi-sticky text-primary me-2"></i>Note ID: <%= note.id %>
    </h6>

    <p class="card-text text-dark">
      <strong><i class="bi bi-card-text me-1 text-secondary"></i>Content:</strong><br>
      <%= simple_format(note.content) %>
    </p>

    <hr>

    <div class="row small text-muted">
      <div class="col-md-6 mb-2">
        <i class="bi bi-kanban me-1 text-info"></i>
        <strong>Task:</strong> <%= note.task&.title || "Unknown Task" %>
      </div>
      <div class="col-md-6 mb-2">
        <i class="bi bi-person-circle me-1 text-success"></i>
        <strong>User:</strong> <%= note.user&.email || "Unknown User" %>
      </div>
    </div>

    <div class="mt-3 d-flex justify-content-end gap-2">
      <%= link_to "Back", notes_path, class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Edit", edit_note_path(note), class: "btn btn-sm btn-outline-secondary" %>
      <%= button_to note_path(note), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" do %>
        Delete
      <% end %>
    </div>
  </div>
</div>
