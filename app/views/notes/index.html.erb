<% content_for :title, "Task Notes" %>

<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" %>

<div class="container py-5">
  <% if notice %>
    <div class="alert alert-success text-center"><%= notice %></div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark"><i class="bi bi-journal-text me-2 text-primary"></i>Notes</h2>
    <div>
      <%= link_to "← Back to Dashboard", dashboard_index_path, class: "btn btn-outline-secondary me-2" %>
    </div>
  </div>

  <% if @notes.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @notes.each do |note| %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= note.content %></h5>
              <p class="card-text text-muted small">
                <%= truncate(strip_tags(note.content), length: 100) %>
              </p>
            </div>
            <div class="card-footer bg-white d-flex justify-content-between align-items-center">
              <small class="text-muted"><i class="bi bi-calendar me-1"></i><%= note.created_at.strftime("%d %b %Y") %></small>
              <%= link_to "View", note_path(note), class: "btn btn-sm btn-outline-primary rounded-pill px-4" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4">
      <i class="bi bi-info-circle me-2"></i>No notes available. You can create one now.
    </div>
  <% end %>
</div>
