<% content_for :title, "Projects" %>

<div class="container py-5">
  <div class="mb-4">
    <%= link_to dashboard_index_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
    <% end %>
  </div>

  <% if notice %>
    <p class="alert alert-success text-center"><%= notice %></p>
  <% end %>

  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary"><i class="bi bi-folder-fill me-2"></i>All Projects</h2>
    <%= link_to "New Project", new_project_path, class: "btn btn-success" %>
  </div>

  <% if @projects.any? %>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm border-0 rounded-3">
            <div class="card-body d-flex flex-column">
              <h5 class="fw-bold text-primary"><i class="bi bi-folder2-open me-2"></i><%= project.name %></h5>
              <p class="text-muted small flex-grow-1"><%= truncate(project.description, length: 100) %></p>
              <p class="text-muted small"><i class="bi bi-person-circle me-1"></i>Owner: <%= project.user.email %></p>
              <%= link_to "View Details", project_path(project), class: "btn btn-outline-primary btn-sm mt-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      No projects found. <%= link_to "Create one now!", new_project_path, class: "fw-semibold" %>
    </div>
  <% end %>
</div>
