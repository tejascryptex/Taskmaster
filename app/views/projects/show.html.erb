<% content_for :title, @project.name %>

<div class="container py-5">
  <div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
          <h3 class="card-title text-primary fw-bold mb-1">
            <i class="bi bi-folder-fill me-2"></i><%= @project.name %>
          </h3>
          <p class="text-muted mb-0">
            <i class="bi bi-person-circle me-1"></i>
            <strong>Owner:</strong> <%= @project.user.email %>
          </p>
        </div>
        <div>
          <%= link_to edit_project_path(@project), class: "btn btn-sm btn-warning me-2" do %>
            <i class="bi bi-pencil-square me-1"></i>Edit
          <% end %>
          <%= link_to projects_path, class: "btn btn-sm btn-outline-secondary" do %>
            <i class="bi bi-arrow-left-circle me-1"></i>Back
          <% end %>
        </div>
      </div>

      <hr>

      <h5 class="text-dark fw-semibold mb-2"><i class="bi bi-info-circle me-2"></i>Description</h5>
      <p class="text-secondary"><%= @project.description.presence || "No description provided." %></p>
    </div>
  </div>
</div>
