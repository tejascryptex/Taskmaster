<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/flatpickr" %>

<div class="container my-5">
  <!-- Top bar -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-primary">
      <i class="bi bi-list-task me-2"></i>Task Details
    </h3>
    <%= link_to "â† Back to Dashboard", dashboard_index_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="card shadow border-0 mb-5">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
          <h4 class="fw-semibold mb-2"><%= task.title %></h4>
          <small class="text-muted">
            <i class="bi bi-calendar-event me-1"></i>
            Due: <%= task.due_date&.strftime('%A, %d %B %Y - %I:%M %p') || 'N/A' %>
          </small>
        </div>
        <span class="badge bg-<%= task.status == 'Completed' ? 'success' : task.status == 'In Progress' ? 'warning text-dark' : 'secondary' %> fs-6">
          <%= task.status || "Not Set" %>
        </span>
      </div>

      <hr>

      <!-- Description -->
      <div class="mb-4">
        <h6 class="text-muted mb-1"><i class="bi bi-card-text me-2"></i>Description</h6>
        <p class="text-secondary"><%= simple_format(task.description) %></p>
      </div>

      <!-- Details -->
      <div class="row mb-4">
        <div class="col-md-6">
          <p>
            <strong><i class="bi bi-calendar me-2 text-primary"></i>Due Date:</strong>
            <%= task.due_date&.strftime("%d %B %Y") || "N/A" %>
          </p>
          <p>
            <strong><i class="bi bi-exclamation-triangle-fill me-2 text-warning"></i>Priority:</strong>
            <span class="badge 
              <%= case task.priority.to_s.downcase
                when 'high' then 'bg-danger'
                when 'medium' then 'bg-warning text-dark'
                when 'low' then 'bg-secondary'
                else 'bg-light text-muted'
              end %>">
              <%= task.priority || "Not Set" %>
            </span>
          </p>
          <p>
            <strong><i class="bi bi-person-fill me-2 text-success"></i>Assignee:</strong>
            <%= task.assignee&.email || "Unassigned" %>
          </p>
          <p>
            <strong><i class="bi bi-kanban-fill me-2 text-info"></i>Project:</strong>
            <%= task.project&.name || "Unknown" %>
          </p>
        </div>
      </div>

      <!-- Time Tracking -->
      <div class="mb-4">
        <h6 class="text-muted mb-1"><i class="bi bi-clock-history me-2"></i>Time Tracking</h6>
        <% if task.started_at.blank? %>
          <%= button_to "Start Timer", start_timer_task_path(task), method: :post, class: "btn btn-outline-success btn-sm me-2" %>
        <% elsif task.ended_at.blank? %>
          <%= button_to "Stop Timer", stop_timer_task_path(task), method: :post, class: "btn btn-outline-danger btn-sm me-2" %>
        <% else %>
          <p><i class="bi bi-stopwatch me-2"></i><strong><%= pluralize(task.time_spent || 0, "minute") %> tracked</strong></p>
        <% end %>
        <p><i class="bi bi-clock me-2"></i>Total Time: <%= pluralize(task.time_spent || 0, "minute") %></p>
      </div>

      <!-- Reminder -->
      <div class="mb-4">
        <h6 class="text-muted mb-1"><i class="bi bi-bell-fill me-2 text-primary"></i>Reminder</h6>
        <%= form_with model: task, url: task_path(task), method: :patch, local: true, data: { turbo: false } do |f| %>
          <div class="input-group">
            <%= f.text_field :reminder_at, id: "task_reminder_at", class: "form-control", placeholder: "Select reminder time" %>
            <button type="submit" class="btn btn-outline-primary">Update</button>
          </div>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-end gap-2 mt-4">
        <%= link_to task_path(task), class: "btn btn-dark btn-sm" do %>
          <i class="bi bi-eye me-1"></i> View
        <% end %>
        <%= link_to edit_task_path(task), class: "btn btn-warning btn-sm" do %>
          <i class="bi bi-pencil-square me-1"></i> Edit
        <% end %>
        <%= button_to task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
          <i class="bi bi-trash me-1"></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    flatpickr("#task_reminder_at", {
      enableTime: true,
      dateFormat: "Y-m-d H:i",
      minDate: "today"
    });
  });
</script>
