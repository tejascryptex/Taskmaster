<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/flatpickr" %>



<div class="container my-5">
    <div class="d-flex justify-content-end mb-3">
        <%= link_to dashboard_index_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        <% end %>
    </div>


  <div class="card shadow-lg border-0">
    <div class="card-body">
      <!-- Task Title & Status -->
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h4 class="fw-bold mb-2">
            <i class="bi bi-list-task me-2 text-primary"></i><%= @task.title %>
          </h4>
          <small class="text-muted">
            <i class="bi bi-calendar-event me-1"></i>
            Due: <%= @task.due_date&.strftime('%A, %d %B %Y - %I:%M %p') || 'N/A' %>
          </small>
        </div>
        <span class="badge bg-info-subtle text-dark fs-6">
          <%= @task.status || "Not Set" %>
        </span>
      </div>

      <!-- Description -->
      <div class="mb-4">
        <h6 class="text-muted">
          <i class="bi bi-card-text me-2"></i>Description
        </h6>
        <p class="text-secondary"><%= simple_format(@task.description) %></p>
      </div>

      <!-- Meta Information -->
      <div class="row mb-4">
        <div class="col-md-6">
          <p><strong><i class="bi bi-calendar me-2 text-primary"></i>Due Date:</strong> <%= @task.due_date&.strftime("%d %B %Y") || "N/A" %></p>

          <p>
            <strong><i class="bi bi-exclamation-triangle-fill me-2 text-warning"></i>Priority:</strong>
            <span class="badge 
              <%= case @task.priority.to_s.downcase
                    when 'high' then 'bg-danger'
                    when 'medium' then 'bg-warning text-dark'
                    when 'low' then 'bg-secondary'
                    else 'bg-light text-muted'
                  end %>">
              <%= @task.priority || "Not Set" %>
            </span>
          </p>

          <p><strong><i class="bi bi-person-fill me-2 text-success"></i>Assignee:</strong> <%= @task.assignee&.email || "Unassigned" %></p>
          <p><strong><i class="bi bi-kanban-fill me-2 text-info"></i>Project:</strong> <%= @task.project&.name || "Unknown" %></p>
        </div>
      </div>

      <!-- Time Tracking -->
      <div class="mb-4">
        <h6 class="text-muted"><i class="bi bi-clock-history me-2"></i>Time Tracking</h6>
        <% if @task.started_at.blank? %>
          <%= button_to "Start Timer", start_timer_task_path(@task), method: :post, class: "btn btn-outline-success btn-sm me-2" %>
        <% elsif @task.ended_at.blank? %>
          <%= button_to "Stop Timer", stop_timer_task_path(@task), method: :post, class: "btn btn-outline-danger btn-sm me-2" %>
        <% else %>
          <p><i class="bi bi-stopwatch me-2"></i><strong><%= pluralize(@task.time_spent || 0, "minute") %> tracked</strong></p>
        <% end %>
        <p><i class="bi bi-clock me-2"></i>Total Time: <%= pluralize(@task.time_spent || 0, "minute") %></p>
      </div>

      <!-- Reminder -->
      <div class="mb-4">
        <h6 class="text-muted"><i class="bi bi-bell-fill me-2 text-primary"></i>Reminder</h6>
        <%= form_with model: @task, url: task_path(@task), method: :patch, local: true, data: { turbo: false } do |f| %>
          <div class="input-group">
            <%= f.text_field :reminder_at, id: "task_reminder_at", class: "form-control", placeholder: "Select reminder time" %>
            <button type="submit" class="btn btn-outline-primary">Update</button>
          </div>
        <% end %>
      </div>

      <!-- Notes / Comments -->
      <div class="mb-4">
        <h6 class="text-muted"><i class="bi bi-chat-left-dots-fill me-2 text-primary"></i>Notes & Comments</h6>
        <% if @task.notes.any? %>
          <ul class="list-group mb-3">
            <% @task.notes.each do |note| %>
              <li class="list-group-item">
                <strong><%= note.user.email %>:</strong>
                <span class="text-muted"><%= note.created_at.strftime('%d %b %Y %I:%M %p') %></span>
                <p class="mb-0"><%= note.content %></p>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">No notes added yet.</p>
        <% end %>

        <!-- Add Note Form -->
        <%= form_with model: [@task, Note.new], local: true do |f| %>
          <div class="input-group">
            <%= f.text_field :content, class: "form-control", placeholder: "Add a new note..." %>
            <button class="btn btn-primary">Add</button>
          </div>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="d-flex justify-content-end gap-2">
        <%= link_to edit_task_path(@task), class: "btn btn-warning btn-sm" do %>
          <i class="bi bi-pencil-square me-1"></i>Edit
        <% end %>

        <%= button_to task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
          <i class="bi bi-trash me-1"></i>Delete
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    flatpickr("#task_reminder_at", {
      enableTime: true,
      dateFormat: "Y-m-d H:i",
      minDate: "today"
    });
  });
</script>
